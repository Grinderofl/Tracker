@using Core.Domain
@model IList<Tracker.Features.Characters.Model.CharacterFieldsModel>

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Character</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model[0].Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model[0].Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model[0].Name)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model[0].Class, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model[0].Class, Model[0].PossibleClasses, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model[0].Class)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model[0].Race, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model[0].Race, Model[0].PossibleRaces, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model[0].Race)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
